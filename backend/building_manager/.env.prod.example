# ============================
# DJANGO CORE
# ============================
DJANGO_SETTINGS_MODULE=building_manager.settings.prod
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=change-me-super-secure-prod

# Domain only (NO protocol, NO port)
DJANGO_ALLOWED_HOSTS=bms.viewdns.net

# ============================
# DATABASE (PROD)
# ============================
# Preferred (used by dj-database-url)
DATABASE_URL=postgres://user:password@dbhost:5432/bms_prod

# ============================
# CORS (LOCKED)
# ============================
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://bms.viewdns.net

# ============================
# JWT / DRF
# ============================
DRF_PAGE_SIZE=10
JWT_ACCESS_MINUTES=60
JWT_REFRESH_DAYS=7

# ============================
